extends votingLayout

block content
    section.header
        nav.header__nav
            .header__nav__homeDiv
                a(class="header__nav__homeDiv__home" href="../")
                    i(class="fa fa-home" title="Home")
            .header__nav__loginDiv
                a(class="header__nav__loginDiv__items" href="/profile")
                    i(class="fa fa-user" title="Profile")
                a(class="header__nav__loginDiv__items" href="/github-signup")
                    i(class="fa fa-github" title="Login with GitHub")
                a(class="header__nav__loginDiv__items" href="/twitter-signup")
                    i(class="fa fa-twitter" title="Login with Twitter")
                a(class="header__nav__loginDiv__items" href="/google-signup")
                    i(class="fa fa-google" title="Login with Google")
            hr.header__nav__line
        article.header__txt
            .header__txt__title Voting App
            .header__txt__subtitle A Free Code Camp Project
            .header__txt__stub A Place where you can make, host and share Polls
            .header__txt__signup
                a(class="btn" + " btn--full" href="/auth/register" title="Credentials for testing: user  pa$$word") Register
                a(class="btn" + " btn--full" href="/auth/login" title="Credentials for testing: user  pa$$word") Login
    section.context
    section.context
        .context__card
            .context__card__header 
                p.context__card__header__title Best Day of the Week?
                .context__card__header__left                
                    ul.context__card__header__left__items                        
                        each val in ["Monday", "Tuesday", "Wednesday", "Thursday", "Friday", "Saturday", "Sunday"]
                            a(class="btn" + " btn--empty" href="#")=val
                .context__card__header__right
                    .context__card__header__right__label Votes:
                    .context__card__header__right__votes 10                
            .context__card__footer
                hr.context__card__footer__line
                .footer__foot This is a footer
