doctype html
html(lang="en")
    head
        title Free Code Camp - Dynamic Web Projecs
        meta(charset="utf-8")
        meta(http-equiv="X-UA-Compatible" content="IE=edge")
        meta(name="description" content="learning projects freeCodeCamp")
        meta(name="viewport" content="width=device-width, initial-scale=1")
        link(type="text/css" rel="stylesheet" href=cssPath)
        link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.css" integrity="sha256-NuCn4IvuZXdBaFKJOAcsU2Q3ZpwbdFisd5dux4jkQ5w=" crossorigin="anonymous")
    body
        section.header
            nav.header__nav
                div.header__nav__left
                    a.header__nav__left__items(href="/")
                        i(class="fa fa-home" title="Home")
                    a.header__nav__left__items.polls(href="/") Polls
                div.header__nav__right
                    if auth == false
                        a.header__nav__right__items(href="/facebook-signup")
                            i(class="fa fa-facebook-square " title="Login with Facebook" aria-hidden="true")
                        a.header__nav__right__items(href="/github-signup")
                            i(class="fa fa-github-square" title="Login with GitHub" aria-hidden="true")
                        a.header__nav__right__items(href="/twitter-signup")
                            i(class="fa fa-twitter-square" title="Login with Twitter" aria-hidden="true")
                        a.header__nav__right__items(href="/google-signup")
                            i(class="fa fa-google-plus-square " title="Login with Google" aria-hidden="true") 
                    else 
                        a.header__nav__right__items.authBtn(href="/auth/logout") Logout
            article.header__txt
                .header__txt__title Voting App
                .header__txt__subtitle A Free Code Camp Project
                .header__txt__stub A Place where you can make, host and share Polls
                .header__txt__signup
                    a(class="btn" + " btn--full" href="/auth/register" title="Credentials for testing: user  pa$$word") Register
                    a(class="btn" + " btn--full" href="/auth/login" title="Credentials for testing: user  pa$$word") Login

        block content