extends layout   

block content
    section.header
        nav.header__nav
            .header__nav__homeDiv
                a(class="header__nav__homeDiv__home" href="../")
                    i(class="fa fa-home" title="Home")
            .header__nav__loginDiv
                a(class="header__nav__loginDiv__items" href="/profile")
                    i(class="fa fa-user" title="Profile")
                a(class="header__nav__loginDiv__items" href="/github-signup")
                    i(class="fa fa-github" title="Login with GitHub")
                a(class="header__nav__loginDiv__items" href="/twitter-signup")
                    i(class="fa fa-twitter" title="Login with Twitter")
                a(class="header__nav__loginDiv__items" href="/google-signup")
                    i(class="fa fa-google" title="Login with Google")
            hr.header__nav__line
    section.context
        form(class="context__form" method="POST" action=type)
            .context__form__header
                h3.context__form__header__title Sign Up
                p.context__form__header__subtitle You want to fill out this form
            hr.form__line
            .form__inputFields
                input(class="form__inputFields__user" maxlength="21" required placeholder="Username" name="username" autofocus="" type="text")
                input(class="form__inputFields__pass" required placeholder="Password" name="password" type="password")

                input(class="form__inputFields__submit" type="submit" value="Register" name="submit")
    section.footer
        footer.footer__codedby Made with 
            i(class="fa fa-heart-o")
            span &nbspby&nbsp
            a(class="footer__codedby__link" href="https://codepen.io/Roky/full/YqGqWg" target="_blank") Roky
            span &nbsp | &nbsp
            a(class="footer__codedby__link" href="https://github.com/Rock-son/Dynamic-web-projects") GitHub Repository