extends layout    
    
block content
    section.context
        div.form__container
            if action == "/auth/register"
                h1.form__container__title Sign Up
                h5.form__container__subtitle Please fill out the Form
            else
                h1.form__container__title Login
                h5.form__container__subtitle Please fill in the Login Data
            hr.form__container__line
            form.form(method='POST' action=action)
                input.form__control(type='text' placeholder='Username' name='username')
                input.form__control(type='password' placeholder='Password' name='password')
                if action == "/auth/register"
                    input.form__control(type='password' placeholder='Confirm Password' name='confirmPassword')
                    input.form__submit.form__control(type='submit' name="submit" value="Register")
                if action == "/auth/login"
                    input.form__submit.form__control(type='submit' name="submit" value="Login")
            a.form__container__footnote(href=reverseType) #{footnote}
    section.footer
        footer.footer__codedby Made with 
            i(class="fa fa-heart-o")
            span &nbspby&nbsp
            a(class="footer__codedby__link" href="https://codepen.io/Roky/full/YqGqWg" target="_blank") Roky
            span &nbsp | &nbsp
            a(class="footer__codedby__link" href="https://github.com/Rock-son/Dynamic-web-projects") GitHub Repository